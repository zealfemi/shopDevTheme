<!-- why section -->
<section class="why_section layout_padding">
  <div class="container">
    <div class="heading_container heading_center">
      <h2>{{ section.settings.heading }}</h2>
    </div>
    <div class="row">
      {% for block in section.blocks %}
        <div class="col-md-4">
          <div class="box ">
            {% if block.settings.image != blank %}
              <div class="img-box">
                <img src="{{ block.settings.image | img_url: 'small' }}">
              </div>
            {% endif %}
            <div class="detail-box">
              <h5>{{ block.settings.title }}</h5>
              <p>{{ block.settings.body }}</p>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>
<!-- end why section -->

{% schema %}
{
  "name": "Information",
  "blocks": [
    {
      "type": "text",
      "name": "Information",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Select your image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Add your title"
        },
        {
          "type": "textarea",
          "id": "body",
          "label": "Add your information"
        }
      ]
    }
  ],
  "settings": [
    {
      "type": "header",
      "content": "Information"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Add your heading"
    }
  ],
  "presets": [
    {
      "name": "Information",
      "blocks": [
        {
          "type": "text"
        }
      ]
    }
  ]
}
{% endschema %}
