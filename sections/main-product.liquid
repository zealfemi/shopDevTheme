{% assign current_product = product.selected_or_first_available_variant %}
{% assign product_image = current_product.featured_image %}

<div class="container">
  <div class="row">
    <div class="col-md-6">
      <img src="{{ product_image.src | img_url: 'large' }}" alt="{{ product_image.alt }}">
      {% for image in current_product.images %}
        <img src="{{ image.url | img_url:'small' }}">
      {% endfor %}
    </div>

    <div class="col-md-6"></div>
  </div>
</div>
