{% assign current_product = product.selected_or_first_available_variant %}
{% assign product_image = current_product.featured_image | default: product.featured_image %}

<div class="container">
  <div class="row">
    <div class="col-md-6">
      <div class="product-image">
        <img class="ProductImg" src="{{ product_image.src | img_url: 'large' }}" alt="{{ product_image.alt }}">

        <div class="thumbnail">
          {% for image in product.images %}
            <img src="{{ image.src | img_url: 'small' }}" alt="{{ image.alt }}">
          {% endfor %}
        </div>
      </div>
    </div>

    <div class="col-md-6">
      <h1>{{ product.title }}</h1>
      <p>{{ current_product.price | money_with_currency }}</p>
      <p>{{ product.description }}</p>

      {% form 'product', product, class="product-form" %}{% endform %}
    </div>
  </div>
</div>
