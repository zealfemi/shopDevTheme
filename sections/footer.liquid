{% schema %}
{
  "name": "Footer Section",
  "blocks": [
    {
      "type": "text",
      "name": "TextArea",
      "settings": [
        {
          "type": "image_picker",
          "id": "logo",
          "label": "Upload footer logo"
        }, {
          "type": "richtext",
          "id": "footer_text",
          "label": "Add your text"
        }
      ]
    }, {
      "type": "link_list",
      "name": "Menu",
      "settings": [
        {
          "type": "link_list",
          "id": "footer_menu",
          "label": "Add your menu"
        }
      ]
    }, {
      "type": "newsletter",
      "name": "newsletter",
      "settings": [
        {
          "type": "text",
          "id": "newsletter_heading",
          "label": "Add newsletter"
        }
      ]
    }



  ],
  "settings": [
    {
      "type": "header",
      "content": "Footer Section"
    }
  ],
  "default": {
    "blocks": [
      {
        "type": "link_list"
      },
      {
        "type": "text"
      },
      {
        "type": "newsletter"
      }
    ]
  }
}
{% endschema %}
