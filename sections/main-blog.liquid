<div class="position-relative text-center bg-light p-3 p-md-5">
  <div class="col-md-5 p-lg-5 mx-auto my-5">
    <h1 class="display-4">{{ blog.title }}</h1>
    <p class="lead">Read Our Latest Articles</p>
  </div>
</div>
<div class="container my-5 p-2">
  {% paginate blog.articles by 6 %}
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-3">
      {% for article in blog.articles %}
        <div class="col-md-4">
          <div class="card shadow">
            <img
              style="max-width:100%"
              class="card-img-top"
              src="{{ article.image.src | img_url: 'medium' }}"
              alt="{{ article.title }}"
            >
            <div class="card-body">
              <h2>{{ article.title }}</h2>
              {{ article.author }} @
              <div class="small">{{ article.created_at | date }}</div>
              <p class="card-text">{{ article.content | strip_html | truncatewords: 5 }}</p>
              <a class="btn btn-secondary" href="{{ article.url }}">Read more...</a>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
    {% if paginate.pages > 1 %}
      {{ paginate | default_pagination }}
    {% endif %}
  {% endpaginate %}
</div>

{% schema %}
{
  "name": "t:sections.main-blog.name",
  "tag": "section",
  "class": "section",
  "settings": [
  ]
}
{% endschema %}
