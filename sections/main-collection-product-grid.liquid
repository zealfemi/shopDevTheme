<!-- inner page section -->
<section class="inner_page_head">
  <div class="container_fuild">
    <div class="row">
      <div class="col-md-12">
        <div class="full">
          <h3>Product Grid</h3>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- end inner page section -->
<!-- product section -->
<section class="product_section layout_padding">
  <div class="container">
    <div class="heading_container heading_center">
      <h2>
        <span>{{ collection.title }}</span>
      </h2>
    </div>
    <div class="row">
      {% for product in collection.products %}
        <div class="col-sm-6 col-md-4 col-lg-3">
          <div class="box">
            <div class="option_container">
              <div class="options">
                <a href="{{ product.url }}" class="option1"> {{ product.title }} </a>
                <a href="{{ product.url }}" class="option2"> Buy Now </a>
              </div>
            </div>
            <div class="img-box">
              <img src="{{ product.featured_image | img_url: 'large' }}" alt="">
            </div>
            <div class="detail-box">
              <h5>{{ product.title }}</h5>
              <h6>{{ product.price | money }}</h6>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
    <div class="btn-box">
      <a href=""> View All products </a>
    </div>
  </div>
</section>
<!-- end product section -->

{% schema %}
{
  "name": "Collection Template",
  "settings": [
    {
      "type": "header",
      "content": "Collection Template"
    }

  ]
}
{% endschema %}
